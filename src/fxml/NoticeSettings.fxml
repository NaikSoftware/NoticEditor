<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="settingsPane" prefHeight="492.0" prefWidth="256.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.temporaryteam.treenote.controller.NoticeSettingsController">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="230.0" minWidth="230.0" percentWidth="100.0" prefWidth="230.0" />
        <ColumnConstraints maxWidth="0.0" minWidth="0.0" prefWidth="0.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="NEVER" />
        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="NEVER" />
    </rowConstraints>
    <children>

        <Label alignment="CENTER" text="%attached_files" textAlignment="CENTER" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets top="20.0" />
            </GridPane.margin>
        </Label>
        <ListView fx:id="listAttached" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="3" />
        <GridPane GridPane.rowIndex="4">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="120.0" prefWidth="120.0" />
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="60.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="40.0" prefHeight="40.0" valignment="CENTER" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button onAction="#handleSelectAttach" text="%select_file" GridPane.columnIndex="0" GridPane.halignment="LEFT">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </GridPane.margin>
                </Button>
                <MenuButton mnemonicParsing="false" text="%actions" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleSaveFile" text="%save_to_fs" />
                        <MenuItem mnemonicParsing="false" onAction="#handleInsertInPage" text="%insert_in_text" />
                        <MenuItem mnemonicParsing="false" onAction="#handleRemoveAttach" text="%remove" />
                    </items>
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0" />
                    </GridPane.margin>
                </MenuButton>
            </children>
        </GridPane>
        <GridPane GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label alignment="CENTER" text="%status" GridPane.halignment="LEFT">
                    <GridPane.margin>
                        <Insets left="5.0" top="5.0" />
                    </GridPane.margin>
                </Label>
                <ChoiceBox fx:id="choiceBoxNoticeStatus" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
                    <GridPane.margin>
                        <Insets right="5.0" top="5.0" />
                    </GridPane.margin>
                </ChoiceBox>
            </children>
        </GridPane>        
    </children>
</GridPane>
